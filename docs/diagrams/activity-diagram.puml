@startuml
!theme plain
skinparam backgroundColor white

start

:User opens app;

if (Logged in?) then (yes)
  :Show Dashboard;
  stop
else (no)
  :Show Login;
endif

:Enter credentials;
:Submit login;

if (Valid credentials?) then (yes)
  :Login successful;
  :Show Dashboard;
  stop
else (no)
  :Show error;
  stop
endif

@enduml